@page "/welcome"
@using System

<div class="container py-5">
    <!-- Welcome Header -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">WELCOME TO STUDY BOOST!</h1>
    </div>

    <div class="row g-4">
        <!-- Features Section -->
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <!-- Feature List -->
                    <div class="d-flex align-items-center mb-4">
                        <i class="bi bi-house-door-fill text-primary me-3" style="font-size: 2rem;"></i>
                        <div>
                            <h5 class="fw-bold mb-1">Home</h5>
                            <p class="text-muted">- Click here to manage the home page features.</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-4">
                        <i class="bi bi-speedometer2 text-success me-3" style="font-size: 2rem;"></i>
                        <div>
                            <h5 class="fw-bold mb-1">Dashboard</h5>
                            <p class="text-muted">- Click here to access and manage the dashboard features.</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-4">
                        <i class="bi bi-journal-text text-info me-3" style="font-size: 2rem;"></i>
                        <div>
                            <h5 class="fw-bold mb-1">Study Session</h5>
                            <p class="text-muted">- Click here to organize and manage study sessions.</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-calendar-event text-warning me-3" style="font-size: 2rem;"></i>
                        <div>
                            <h5 class="fw-bold mb-1">Calendar</h5>
                            <p class="text-muted">- Click here to manage and view your calendar.</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!-- Changelog Section -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="m-0 fw-bold">Changelog</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-1">01/07/25</p>
                    <h6 class="fw-bold">Version 1.0 Features</h6>
                    <ul class="text-muted">
                        <li>User Inputs for Subjects</li>
                        <li>Subject Schedule & Exam Managements</li>
                        <li>Personalized Study Plans</li>
                        <li>Reviewer & Quizzes</li>
                        <li>Literature Suggestions</li>
                        <li>User-friendly Interface for Input & Navigation</li>

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

